<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user', user: current_user %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thread>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thread>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_user_image(80,80) %></td>
            <td><%= user.name %></td>
            <% if current_user != user %>
            <td id="follow-btn" class="index"><%= render 'relations/follow', user: user %></td>
            <% end %>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>