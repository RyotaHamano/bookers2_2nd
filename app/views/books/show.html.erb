<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/new', book: @book2 %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@book.user.id) do %><%= image_tag @book.user.get_user_image(80,80) %><br><%= @book.user.name %><% end %></td>
            <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
            <% if @book.favorited_by?(current_user) %>
              <td><%= link_to book_favorites_path(@book.id), method: :delete, class:'text-danger' do %><i class="fa-solid fa-heart"></i><%= @book.favorites.count%><% end %></td>
            <% else %>
              <td><%= link_to book_favorites_path(@book.id), method: :post, class:'text-primary' do %><i class="fa-solid fa-heart"></i><%= @book.favorites.count%><% end %></td>
            <% end %>
            <% if current_user == @book.user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id), class:'btn btn-sm btn-success'%></td>
              <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:'btn btn-sm btn-danger', data:{confirm: "本当に消しますか？"} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <table class="table">
        <tbody>
          <% @comments.each do |book_comment| %>
            <tr>
              <td><%= link_to user_path(book_comment.user.id) do %><%= image_tag book_comment.user.get_user_image(60,60) %><br><%= book_comment.user.name %><% end %></td>
              <td><%= book_comment.comment %></td>
              <% if current_user.id == book_comment.user_id %>
                <td><%= link_to 'Destroy', book_comment_path(@book.id, book_comment.id), method: :delete, class:'btn btn-danger' %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= form_with model: @comment, url: book_comments_path(@book.id) do |f| %>
        <div class="form-group">
          <p>Comment</p>
          <%= f.text_area :comment %>
        </div>
        <div class="form-group">
          <%= f.submit '送信', class:'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
