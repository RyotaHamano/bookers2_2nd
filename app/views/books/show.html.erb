<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/new', book: @book2 %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@book.user.id) do %><%= image_tag @book.user.get_user_image(80,80) %><br><%= @book.user.name %><% end %></td>
            <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
            <td><%= @book.body %></td>
            <% if @book.favorited_by?(current_user) %>
              <td><%= link_to book_favorites_path(@book.id), method: :delete, class:'text-danger' do %><i class="fa-solid fa-heart"></i><%= @book.favorites.count%><% end %></td>
            <% else %>
              <td><%= link_to book_favorites_path(@book.id), method: :post, class:'text-primary' do %><i class="fa-solid fa-heart"></i><%= @book.favorites.count%><% end %></td>
            <% end %>
            <% if current_user == @book.user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id), class:'btn btn-sm btn-success'%></td>
              <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:'btn btn-sm btn-danger', data:{confirm: "本当に消しますか？"} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
