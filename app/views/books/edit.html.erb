<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing book</h2>
      <%= form_with model: @book, url: book_path(@book.id) do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update user', class:'btn btn-success'%>
        </div>
      <% end %>
    </div>
  </div>
</div>