<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 px-5 px-sm-0 mx-auto">
      <% if @range == 'User' %>
        <h2>User</h2>
        <table class="table">
          <thread>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
          </thread>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_user_image(80,80) %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h2>Book</h2>
        <table class="table">
          <thread>
            <tr>
              <th>image</th>
              <th>title</th>
              <th></th>
            </tr>
          </thread>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_user_image(80,80) %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>